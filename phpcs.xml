<?xml version="1.0"?>
<ruleset name="v-wpsa">
    <description>PHP_CodeSniffer rules for v-wpsa plugin</description>

    <!-- Apply WordPress Standards, but exclude deprecated sniffs -->
    <rule ref="WordPress">
        <exclude name="Generic.Functions.CallTimePassByReference" />
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing" />
    </rule>
    <rule ref="WordPress-Core">
        <exclude name="Generic.Functions.CallTimePassByReference" />
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing" />
    </rule>
    <rule ref="WordPress-Docs">
        <exclude name="Generic.Functions.CallTimePassByReference" />
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing" />
    </rule>
    <rule ref="WordPress-Extra">
        <exclude name="Generic.Functions.CallTimePassByReference" />
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing" />
    </rule>

    <!-- Add the recommended replacement sniff -->
    <rule ref="Generic.WhiteSpace.LanguageConstructSpacing" />

    <!-- Ignore folders -->
    <exclude-pattern>^.*[/\\\\]vendor[/\\\\].*</exclude-pattern>
    <exclude-pattern>^.*[/\\\\]assets[/\\\\].*</exclude-pattern>
    <exclude-pattern>^.*[/\\\\]tcpdf[/\\\\].*</exclude-pattern>


    <!-- Limit scan scope -->
    <file>includes/</file>
    <file>templates/</file>
    <file>v-wp-seo-audit.php</file>
</ruleset>
